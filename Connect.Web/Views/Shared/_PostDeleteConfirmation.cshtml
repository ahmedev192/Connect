﻿<div id="postDeleteDialog" uk-modal>
    <div class="uk-modal-dialog bg-white relative mx-auto w-[400px] rounded-lg shadow-xl">
        <!-- Modal Header -->
        <div class="p-6">
            <h2 class="text-xl font-semibold">Confirm Delete</h2>
        </div>

        <!-- Modal Body -->
        <div class="p-6 py-0">
            <p>Are you sure you want to delete this post?</p>
        </div>

        <!-- Modal Footer-->
        <div class="p-6 flex justify-end text-sm font-medium">
            <form asp-controller="Post" asp-action="DeletePost">
                <input type="hidden" name="postId" id="deleteConfirmationPostId" value="" />
                <button type="button" class="px-4 py-1.5 uk-modal-close rounded-md">Cancel</button>
                <button type="submit" class="px-5 py-1.5 bg-gray-100 rounded-md">Delete</button>
            </form>
        </div>

        <!-- Close Button -->
        <button type="button" class="bg-white p-2 right-0 top-0 m-3 uk-modal-close absolute rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

    </div>
</div>